{
  "manifest_version": 3,
  "name": "AWS Credential Manager - Poridhi Labs",
  "version": "1.0.0",
  "description": "Streamline AWS credential management for Poridhi lab environments",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://poridhi.io/*", "https://*.signin.aws.amazon.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://poridhi.io/launch/playground/*", "https://poridhi.io/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AWS Credential Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
